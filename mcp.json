{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date library/framework documentation for LLMs"
    },
    "exa": {
      "command": "npx",
      "args": ["-y", "exa-mcp-server"],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      },
      "description": "Web search, code search, and research tools"
    },
    "markitdown": {
      "command": "npx",
      "args": ["-y", "markitdown-mcp-npx"],
      "description": "Convert PDFs, Office docs, images to markdown (Microsoft MarkItDown)"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "description": "Browser automation for visual verification (official Microsoft)"
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "description": "Chrome DevTools for frontend debugging"
    }
  }
}
